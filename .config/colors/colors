#!/bin/bash

# TODO: Flip dependency. Color ranges should be base truth, ANSI/terminal colors
# should be hand picked from the full range.

# Indexed colors. Maximum 256
i0='#0d0d0d'
i1='#ec1329'
i2='#00ff66'
i3='#ffd900'
i4='#0e5af1'
i5='#ff0080'
i6='#00bbff'
i7='#dedee3'
i8='#71758e'
i9='#fd4342'
i10='#66ffa3'
i11='#ffe866'
i12='#6e9cf7'
i13='#ff66b3'
i14='#66d6ff'
i15='#fcfcfd'

# ANSI named shortcuts
ansi_black=$i0
ansi_red=$i1
ansi_green=$i2
ansi_yellow=$i3
ansi_blue=$i4
ansi_magenta=$i5
ansi_cyan=$i6
ansi_white=$i7
ansi_brblack=$i8
ansi_brred=$i9
ansi_brgreen=$i10
ansi_bryellow=$i11
ansi_brblue=$i12
ansi_brmagenta=$i13
ansi_brcyan=$i14
ansi_brwhite=$i15

# Black
black=$ansi_black

# White
white=$ansi_white
l1_white=$ansi_brwhite

# Red
d4_red='#2f0408'
d3_red='#5e0810'
d2_red='#8e0b18'
d1_red='#bd0f21'
red=$ansi_red
l1_red='#f04254'
l2_red=$ansi_brred
l3_red='#f7a1a9'

# Orange
d4_orange='#331e00'
d3_orange='#663c00'
d2_orange='#995900'
d1_orange='#cc7700'
orange='#ff9500'
l1_orange='#ffaa33'
l2_orange='#ffbf66'
l3_orange='#ffd599'

# Yellow
d4_yellow='#664d00'
d3_yellow='#665700'
d2_yellow='#998200'
d1_yellow='#ccad00'
yellow=$ansi_yellow
l1_yellow='#ffe033'
l2_yellow=$ansi_bryellow
l3_yellow='#fff099'

# Green
d4_green='#003314'
d3_green='#006629'
d2_green='#00993d'
d1_green='#00cc52'
green=$ansi_green
l1_green='#33ff85'
l2_green=$ansi_brgreen
l3_green='#99ffc2'

# Cyan
d4_cyan='#002533'
d3_cyan='#004760'
d2_cyan='#007099'
d1_cyan='#0096cc'
cyan=$ansi_cyan
l1_cyan='#33c9ff'
l2_cyan=$ansi_brcyan
l3_cyan='#99e4ff'

# Blue
d5_blue='#020918'
d4_blue='#031230'
d3_blue='#062460'
d2_blue='#083691'
d1_blue='#0b48c1'
blue=$ansi_blue
l1_blue='#3e7bf4'
l2_blue=$ansi_brblue
l3_blue='#9fbdf9'

# Purple
d4_purple='#1a0033'
d3_purple='#330066'
d2_purple='#4d0099'
d1_purple='#6600cc'
purple='#8000ff'
l1_purple='#9933ff'
l2_purple='#b366ff'
l3_purple='#cc99ff'

# Magenta
d4_magenta='#33001a'
d3_magenta='#660033'
d2_magenta='#99004d'
d1_magenta='#cc0066'
magenta=$ansi_magenta
l1_magenta='#ff3399'
l2_magenta=$ansi_brmagenta
l3_magenta='#ff99cc'

# Gray
d4_gray='#17171c'
d3_gray='#2d2f39'
d2_gray='#444655'
d1_gray='#5b5e71'
gray=$ansi_brblack
l1_gray='#8e91a4'
l2_gray='#aaacbb'
l3_gray='#c6c8d2'

# Special
terminal_bg=$black
editor_bg=$d5_blue
debug='#ff00ff'

